{
	"trailingComma": "none",
	"tabWidth": 2,
	"useTabs": true,
	"semi": false,
	"singleQuote": true,
	"jsxSingleQuote": true,
	"arrowParens": "avoid",
	"importOrder": [
		"<THIRD_PARTY_MODULES>",
		"app",
		"/state/",
		"/api/",
		"pages/",
		"entities/*",
		"shared/lib",
		"shared/ui",
		"widgets",
		"components/",
		"components/ui",
		"^../(.*)",
		"^./(.*)",
		"/module.(s)?css/",
		".(s)?css"
	],
	"plugins": ["@trivago/prettier-plugin-sort-imports"],
	"importOrderSortSpecifiers": true,
	"importOrderSeparation": true,
	"importOrderCaseInsensitive": true
}
